{
	"name": "ChatGPT code snippet theme",
	"colors": {
        "editor.background": "#1E1E1E",  // Very dark blue, almost black.
        "editor.foreground": "#D4D4D4",  // Light grey for the main text.
        "editor.lineHighlightBackground": "#2C313C",  // Subtle highlight for the current line.
        "editorLineNumber.foreground": "#5A5A5A",  // Dim grey for line numbers.
        "editor.selectionBackground": "#555555",  // Dark grey for selection.
        "editorCursor.foreground": "#9AADF9",  // Light blue for the cursor.
        "activityBar.background": "#333333",  // Dark grey for the activity bar.
        "sideBar.background": "#252526",  // Very dark grey for the sidebar.
        "statusBar.background": "#007ACC",  // Blue for the status bar.
        "statusBar.foreground": "#FFFFFF",  // White for text in the status bar.
        "titleBar.activeBackground": "#333333",  // Dark grey for the title bar.
        "titleBar.activeForeground": "#FFFFFF",  // White for title bar text.
        "button.background": "#0E639C",  // Dark blue for button background.
        "button.foreground": "#FFFFFF",  // White for button text.
        "dropdown.background": "#252526",  // Dark grey for dropdown menus.
        "dropdown.foreground": "#D4D4D4",  // Light grey for dropdown text.
        "input.background": "#1E1E1E",  // Dark background for input fields.
        "input.foreground": "#D4D4D4",  // Light grey for input text.
        "input.border": "#555555",  // Border color for input fields.
        "scrollbar.shadow": "#000000",  // Shadow for scrollbars.
        "scrollbarSlider.background": "#2C313C",  // Background color for scrollbar sliders.
        "scrollbarSlider.hoverBackground": "#3E4451",  // Hover color for scrollbar sliders.
        "scrollbarSlider.activeBackground": "#606770"  // Active color for scrollbar sliders.
    },
    "tokenColors": [
        {
            "scope": [
                "keyword.control"
            ],
            "settings": {
                "foreground": "#569CD6"  // Bright blue for other control keywords.
            }
        },
        {
            "scope": [
                "keyword",
                "storage.modifier"
            ],
            "settings": {
                "foreground": "#D73A49"  // Red for class and other storage modifiers.
            }
        },
        {
            "scope": [
                "entity.name.type",
            ],
            "settings": {
                "foreground": "#4EC9B0"  // Turquoise for type names.
            }
        },
        {
            "scope": [
                "entity.name.function"
            ],
            "settings": {
                "foreground": "#DCDCAA"  // Pale yellow for function names.
            }
        },
        {
            "scope": [
                "entity.name.type.class",
                "entity.name.class"
            ],
            "settings": {
                "foreground": "#D73A49"  // Red for class names.
            }
        },
        {
            "scope": [
                "variable"
            ],
            "settings": {
                "foreground": "#9CDCFE"  // Soft light blue for variables.
            }
        },
        {
            "scope": [
                "entity.name.function",
                "variable.function",
                "support.function"
            ],
            "settings": {
                "foreground": "#D19A66"  // Orange for functions.
            }
        },
        {
            "scope": [
                "variable.other.constant"
            ],
            "settings": {
                "foreground": "#D19A66"  // Orange for constants.
            }
        },
        {
            "scope": [
                "support.class.std",
                "entity.name.type.namespace"
            ],
            "settings": {
                "foreground": "#FFFFFF"  // White for std:: types and namespaces.
            }
        },
        {
            "scope": [
                "punctuation.definition.generic.begin.cpp",
                "punctuation.definition.generic.end.cpp"
            ],
            "settings": {
                "foreground": "#3d810c"  // Green for < and > in template definitions.
            }
        },
        {
            "scope": [
                "punctuation.definition.generic.begin",
                "punctuation.definition.generic.end"
            ],
            "settings": {
                "foreground": "#D16969"  // Red for generic punctuation (e.g., < > in 'std::vector').
            }
        },
        {
            "scope": [
                "punctuation.definition.string.begin",
                "punctuation.definition.string.end"
            ],
            "settings": {
                "foreground": "#CE9178"  // Soft orange for string punctuation.
            }
        },
        {
            "scope": [
                "punctuation.separator"
            ],
            "settings": {
                "foreground": "#808080"  // Grey for separators like ':' in 'std::'.
            }
        },
        {
            "scope": [
                "constant.numeric",
                "constant.language"
            ],
            "settings": {
                "foreground": "#a6f57b"  // Light green for numbers and constants.
            }
        },
        {
            "scope": [
                "string",
                "string.quoted"
            ],
            "settings": {
                "foreground": "#CE9178"  // Soft orange for string literals.
            }
        },
        {
            "scope": [
                "string.quoted.double.go",
                "string.quoted.single.go"
            ],
            "settings": {
                "foreground": "#00a67d"  // Light green for strings.
            }
        },
        {
            "scope": [
                "punctuation.definition.string.begin.go",
                "punctuation.definition.string.end.go"
            ],
            "settings": {
                "foreground": "#00a67d"  // Light green for string punctuation.
            }
        },
        {
            "scope": "comment",
            "settings": {
                "foreground": "#6A737D"  // Grey for comments.
            }
        },
        {
            "scope": [
                "storage.type"
            ],
            "settings": {
                "foreground":"#569CD6"  // Blue for keywords like 'func'.
            }
        }
    ]
}
